@model IEnumerable<FA.Project.Model.ClassBatch>

@{
    ViewData["Title"] = "Index";
}

<h1>Class Batches</h1>

<p>
    <a asp-action="Create" style="color:green;font-size:24px"><i class="fas fa-folder-plus"></i>Create New</a>

</p>
<div class="table-responsive-sm" style="overflow-x:auto">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ClassName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GroupMail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DetailLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remarks)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AuditTrail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.isDeleted)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupMail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DetailLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuditTrail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isDeleted)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ClassId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ClassId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ClassId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
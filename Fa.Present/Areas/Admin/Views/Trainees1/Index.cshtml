@model IEnumerable<FA.Project.Model.Trainee>

@{
    ViewData["Title"] = "Index";
}

<h1>List trainee</h1>

<p>
    <a asp-action="Create" style="color:green;font-size:24px"><i class="fas fa-folder-plus"></i>Create New</a>
</p>
<div class="table-responsive-sm" style="overflow-x:auto">
    <table class="table" @*style="border:1px solid yellow"*@>
        <thead style="border:1px solid yellow">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Account)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AllocationStatus)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody style="border:1px solid yellow">
            @foreach (var item in Model)
            {
                <tr style="border:1px solid yellow">
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TraineeId">@Html.DisplayFor(modelItem => item.FullName)</a>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Account)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.AllocationStatus)
                    </td>


                    <td style="width:100px">
                        |
                        <a asp-action="Details" asp-route-id="@item.TraineeId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.TraineeId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
